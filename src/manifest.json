{

	"manifest_version": 2,
	"name": "Incremental Productivity",
	"version": "0.4.6.1",

	"description": "Gamify your life! Do productive tasks in exchange for more browsing time.",

	"icons": {
		"48": "icons/border-48.png"
	},

	"browser_action": {
		"default_icon": {
			"48" : "icons/border-48.png"
		},
		"default_title": "Incremental Productivity",
		"default_popup": "popup/productivity.html"
	},

	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs",
		"storage"
	],

	"background": {
		"scripts": ["background.js"]
	}

}
