{

	"manifest_version": 2,
	"name": "Habit Alarm",
	"version": "1.0",

	"description": "Do productive tasks in exchange for more browsing time!",

	"icons": {
		"48": "icons/border-48.png"
	},

	"browser_action": {
		"default_icon": {
			"48" : "icons/border-48.png"
		},
		"default_title": "Habit Alarm",
		"default_popup": "popup/popup.html"
	},

	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs",
		"storage"
	],

	"background": {
		"scripts": ["background.js"]
	}

}
